#!/bin/bash
#
# zdupdate - check/update zd
#
# Author: Lord Kator <lordkator@swgemu.com>
#
# Created: Sat Sep 10 07:48:31 EDT 2016
#

check_update() {
    echo "** Checking $PWD"
    getgiturl "check"

    git fetch --all

    local rev_local=$(git rev-parse @{0})
    local rev_remote=$(git rev-parse @{u})
    local rev_base=$(git merge-base @{0} @{u})

    if [ "${rev_local}" = "${rev_remote}" ]; then
	echo "Up-to-date"
	return 0
    elif [ "${rev_local}" = "${rev_base}" ]; then
	echo "Need to pull"
	return 1
    elif [ "${rev_remote}" = "${rev_base}" ]; then
	echo "Need to push"
	return 0
    fi

    echo "Unknown state"
    return 0
}

check_basebox() {
    local our_version=$(cat /.swgemudev.version)
    local cur_version=$(grep config.vm.box_version ${ZDHOME}/ZonamaDev/fasttrack/Vagrantfile | tr -d '['"'"'"]' | sed -e 's/.*=[ ]*//' -e 's/;//')

    echo "** This basebox version ${our_version} vs published version ${cur_version}"

    if version_error "${cur_version}" "${our_version}"; then
        echo "Basebox is out of date"
        alert "ZonamaDev Update Status" "Your Virtual Machine is out of date.\nPlease see the ZonamaDev wiki for upgrade instructions.\n" 0
        if [ -x $BROWSER ]; then
            $BROWSER "https://github.com/Zonama/ZonamaDev/wiki/NOTICE:-Virtual-Machine-Operating-System-out-of-date"
        fi
        return 1
    fi

    return 0
}

update_zd() {
    echo "** Update ${ZDREPO}"
    git stash
    git pull

    getgiturl "updated"

    local tag=$(git describe --tag)

    alert "Updated ZonamaDev" "Updated to ${tag}" 0
}

version_error() {
    local want_int want_maj want_min want_sub want_misc have_int have_maj have_min have_sub have_misc
    read want_maj want_min want_sub want_misc <<<${1//[^0-9]/ }
    read have_maj have_min have_sub have_misc <<<${2//[^0-9]/ }

    let "have_int = ${have_maj:-0} * 1000000 + ${have_min:-0} * 1000 + ${have_sub:-0}"
    let "want_int = ${want_maj:-0} * 1000000 + ${want_min:-0} * 1000 + ${want_sub:-0}"

    if [ "${have_int}" -le "${want_int}" ]; then
        return 0
    fi

    return 1
}

getgiturl() {
    export ZDGITURL=$(curl -G -s "http://downloads.zonamaserver.org/zonamadev/giturl.txt" --data-urlencode "x-ztype=zd" --data-urlencode "x-zdupdate=${1}" --data-urlencode "x-uuid=$(sudo /usr/sbin/dmidecode -s system-uuid)" --data-urlencode "x-version=$(cat /.swgemudev.version)" --data-urlencode "x-zd-version=$(git describe --tag)" --data-urlencode "x-zd-repo=$(git ls-remote --get-url)" --data-urlencode "x-zd-branch=$(git rev-parse --abbrev-ref HEAD)" --data-urlencode "x-id=$(cat /var/lib/dbus/machine-id)")
}

alert() {
    if [ -z "$HAVEX" ]; then
	export HAVEX=false
	export DISPLAY=':0'
	if xset q > /dev/null 2>&1; then
	    export HAVEX=true
	else
	    unset DISPLAY
	fi
    fi

    local ttl=86400

    if [ ! -z "$3" ]; then
	ttl=$3
    fi

    if $HAVEX; then
	notify-send --icon=${ASSETS_DIR}/swgemu_icon.png --expire-time=${ttl} "$1 - $(date)" "\n$2"
	echo "USER ALERT: $1 - $2"
    else
	echo "**ALERT** $1: $2"
    fi
}

export PATH=$PATH:$HOME/bin

pushd $(dirname ${BASH_SOURCE[0]}) > /dev/null
export ME=$(pwd -P)'/'$(basename ${BASH_SOURCE[0]})
popd > /dev/null

# Hunt for local ZonamaDev repo
dir=$(dirname $ME)
for i in "$HOME" "${dir}" "${dir}/.." "${dir}/../.." "${dir}/../../.."
do
    dir="${i}/ZonamaDev"

    if [ -d "${dir}/.git" ]; then
	export ZDREPO="${dir}"
	cd "${dir}"
        source "${dir}/common/global.config"
	break
    fi
done

if [ -z "${ZDREPO}" -o ! -d "${ZDREPO}" ]; then
    echo "** ERROR: Can not find ZonamaDev repo, GET HELP!"
    exit 252
fi

VERBOSE=false
AUTO_UPDATE=false
AUTO_RELOAD=false

if zdcfg check-flag autoupdate_zd; then
    AUTO_UPDATE=true
    AUTO_RELOAD=true
fi

for i in "$@"
do
    if [ "X$i" = "X--update" ]; then
	AUTO_UPDATE=true
    fi
    if [ "X$i" = "X--auto" ]; then
	AUTO_UPDATE=true
	AUTO_RELOAD=true
    fi
    if [ "X$i" = "X--verbose" ]; then
	VERBOSE=true
    fi
done

if ! check_update "$@"; then
    echo "** Out of date"
    if $AUTO_UPDATE; then
	update_zd

	if $AUTO_RELOAD; then
	    alert "ZondamaDev Update Running" "Running devsetup"
	    (unset ME; exec /home/vagrant/ZonamaDev/fasttrack/scripts/devsetup > /dev/null 2>&1)
	    echo "** devsetup returned $?"
	    alert "ZondamaDev Updated" "Completed devsetup"
	else
	    alert "ZondamaDev Updated" "Please reboot to run latest version" 0
	fi
    else
	alert "ZondamaDev Out Of Date" "To update to the latest version:\n\n\t1) Stop the emu server\n\n\t2) Click: [Applications Menu]->[Log Out]->[Restart]" 0
    fi
else
    if $VERBOSE; then
	alert "ZonamaDev Update" "You are up to date"
    fi
fi

check_basebox

exit $?
